<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post">
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input name="username" placeholder="Enter Username" class="form-control" id="username" type="text" required>
            </div>
            <div class="mb-3">
                <lable for="email" class="form-label">Email</lable>
                <input name="email" placeholder="Enter email" class="form-control" id="username" type="email" required>
            </div>
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input name="password" placeholder="Enter Password" class="form-control" id="password" type="password" required>
            </div>
        <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>